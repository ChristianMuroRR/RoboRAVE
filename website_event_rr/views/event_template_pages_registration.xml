        <xpath expr="//form//div//div//div//h5[@t-field='ticket.name']" position="after">
                    <t t-foreach="ticket.division_ids" t-as="ids">
                    <tr>
                        <td class="division_ids">
                        <t t-if="ids.name == 'ES'">
                            <span class="badge badge-pill badge-info-ES">
